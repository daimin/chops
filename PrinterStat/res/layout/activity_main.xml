<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    android:orientation="vertical">
       <Spinner
           android:id="@+id/deviceNo"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           
           />
        <Spinner
           android:id="@+id/custName"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           />
         <Spinner
           android:id="@+id/archivesType"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           />
        <EditText 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/archivesNum"
        android:hint="@string/hit_archives_num"
        android:inputType="numberSigned"
        />
        <EditText 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/counterInit"
        android:hint="@string/hit_counter_init"
        android:inputType="numberSigned"
        />
       <EditText 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/counterOver"
        android:hint="@string/hit_counter_over"
        android:inputType="numberSigned"
        />  
        <EditText 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/paperScrap"
        android:hint="@string/hit_paper_scrap"
        android:inputType="numberSigned"
        />
        <EditText 
        android:layout_width="fill_parent"
        android:layout_height="120dip"
        android:id="@+id/memo"
        android:hint="@string/hit_memo"
        android:inputType="textImeMultiLine"
        android:singleLine="false"
        android:gravity="top"
        /> 
        <LinearLayout 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" 
            android:orientation="horizontal"
            android:gravity="right"
            >
        <Button
            android:text="@string/commit_text"
            android:layout_width="128dip"
            android:layout_height="wrap_content"
            android:id="@+id/commitBtn"
            android:layout_marginRight="12dip"
            android:textStyle="bold"
            />
        <Button
            android:text="@string/save_text"
            android:layout_width="128dip"
            android:layout_height="wrap_content"
            android:id="@+id/saveBtn"
            android:layout_marginLeft="12dip"
            android:textStyle="bold"
            />
        </LinearLayout>

</LinearLayout>